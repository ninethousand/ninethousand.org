 {% extends 'NineThousandNineThousandBundle::layout.html.twig' %}
 {% block title "projects | ninethousand.org" %}
 {% block menu %}{% include "NineThousandNineThousandBundle:Projects:menu.html.twig" %}{% endblock %}
 {% block body %} 
<div id="contentPanel">
    <div id="projects" >
    <h2>ninethousand.org projects</h2>
    <ul>
    {% for project in projects %}
        <li>
            <h3><a title="{{ project.title }}" href="/project/{{ project.slug }}/{{ project.home_path }}" >{{ project.title }}</a></h3>
            <div class="description">
                <p class="capstext">{{ project.description }}<p>
            </div>
            <div class="links">
                <ul>
                    {% if project.demo is defined %}
                        <l1><a title="{{ project.title }} demo" href="{{ project.demo }}" ><h4>Demo</h4></a></li>
                    {% endif %}
                    
                    {% if project.documentation_url is defined %}
                        <l1><a title="{{ project.title }} documentation" href="{{ project.documentation_url }}" ><h4>Documentation</h4></a></li>
                    {% endif %}
                    
                    {% if project.github_url is defined %}
                        <l1><a title="{{ project.title }} github repository" href="{{ project.github_url }}" ><h4>Github Repository</h4></a></li>
                    {% endif %}
                    
                    {% if project.issues_url is defined %}
                        <l1><a title="{{ project.title }} issues" href="{{ project.issues_url }}" ><h4>Issues</h4></a></li>
                    {% endif %}
                </ul>
            </div>
        </li>
    {% endfor %}
    </ul>
    </div>
</div>
 {% endblock %}
